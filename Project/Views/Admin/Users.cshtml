@using Project.Models
@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "Админ панель";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<nav class="navbar navbar-inverse navbar-static-top" role="navigation">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand">Список Пользователей</a>
        </div>
d
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><a href="@Url.Action("Index", "Admin")">Книги <span class="badge">@TempData["Book"]</span></a></li>
                <li class="active"><a href="@Url.Action("Users", "Admin")">Пользователи <span class="badge">@TempData["User"]</span></a></li>
                <li><a href="@Url.Action("OrderList", "Admin")">Заказы <span class="badge">@TempData["Order"]</span></a></li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div class="panel panel-default">
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-right">Login</th>
                    <th class="text-right">Имя</th>
                    <th class="text-right">Фамилия</th>
                    <th class="text-right">Группа</th>
                    <th class="text-right">Факультет</th>
                    <th class="text-right">Email</th>
                </tr>
            </thead>
            
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="3" class="text-center">Нет ни одной учетной записи</td>
                        </tr>
                    }
                    else
                    {
                        foreach (ApplicationUser user in Model)
                        {
                        <tr>
                            <td class="text-right" scope="row">@user.Login</td>
                            <td class="text-right">@user.LastName</td>
                            <td class="text-right">@user.FirsName</td>
                            <td class="text-right">@user.Group</td>
                            <td class="text-right">@user.Faculty</td>
                            <td class="text-right">@user.Email</td>
                        </tr>
                        }
                    }
         </table>
    </div>
</div>

